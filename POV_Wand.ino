int delayTime(){
  int analogPin = A1; 
  int y = 0;
  int i = 0;
  int readCycle =0;
  float countMiliSeconds=0;
  float period[4];
  bool cycled= false;
  for(int j = 0;j<4;j++){
    period[j]=0;
  }
  do{
  if(readCycle<4){
      y = analogRead(analogPin);  // read the input pin
     // Serial.println(y);          // debug value
      //Serial.println(countMiliSeconds); 
      //Serial.println(readCycle);          // debug value
      countMiliSeconds=countMiliSeconds+100;
      period[i]=period[i]+100;
      delay(100);
  }
  if(y>550){
    cycled=true;
  }
  if(y<400&&cycled){
     readCycle++;
     cycled=false;
     i++;
  }
  }while(readCycle<4);
  //Serial.println(countMiliSeconds);         
  //Serial.println(period[0]+period[1]+period[2]+period[3]);
  return ((period[0]+period[1]+period[2]+period[3])/4)/35;
}
