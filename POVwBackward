 int *str[] = {G,O,_,B,E,A,V};
 bool direct = 1;
void setup() {
  pinMode(2, OUTPUT);
  pinMode(3, OUTPUT);
  pinMode(4, OUTPUT);
  pinMode(5, OUTPUT);
  pinMode(6, OUTPUT);
  pinMode(7, OUTPUT);
  pinMode(8, OUTPUT);
  pinMode(9, OUTPUT);
  pinMode(A1,INPUT);
 
}




void letter_to_LED(int *character){
  int pos=0;
  int col=0;
  int i=2;
  
    for(col=0;col<6;col++){
      while(i < 10){
        digitalWrite(i,character[pos]);
        i=i+1;
        pos++;
      }
      i=2;
      delay(1);
    }
}
void letter_to_LED_backward(int *character){
  int pos=0;
  int col=0;
  int i=2;
  int k=0;
  int charBackward[8];
    for(int j=6;j>-1;j--){
          character[j]=charBackward[k];
          k++;
    }
    for(col=0;col<5;col++){
      while(i < 10){
        digitalWrite(i,character[pos]);
        i=i+1;
        pos++;
      }
      i=2;
      delay(1);
    }
}
void loop() {
  // Character Arrays
  int i=0; 
  int acc = analogRead(A1);
  if(acc=0){
    direct = !direct;
  }
  if (direct){
    for(i=0;i<7;i++){
          letter_to_LED(str[i]);
          delay(4);
    }
  }else{
    for(i=0;i<7;i++){
          letter_to_LED_backward(str[i]);
          delay(4);
    }
  }
  
}
