int highTime=0;
int lowTime=0;
int highTimeChange=0;
int lowTimeChange=0;
bool lowChange=false;
bool highChange=false;
int halfCycleTime=42;
int delayInterval=1;
int previousTime1=4;
int previousTime2=0;
int currentTime=0;

int *str[] = {G,O,_,B,E,A,V,S};
int adata;
bool direct=1;
 
void setup() {
  pinMode(2, OUTPUT);
  pinMode(3, OUTPUT);
  pinMode(4, OUTPUT);
  pinMode(5, OUTPUT);
  pinMode(6, OUTPUT);
  pinMode(7, OUTPUT);
  pinMode(8, OUTPUT);
  pinMode(9, OUTPUT);
  pinMode(A1, INPUT);
 
}

void delayTime(){
  int accelData = A1;
  //highTimeChange=highTime;
  //lowTimeChange=lowTime;
  if(accelData>550){
    highChange=true;
    highTime=millis();
  }
  if(accelData<400){
    lowChange=true;
    lowTime=millis();
  }
  //if((highTimeChange!=highTime||lowTimeChange!=lowTime)){
  if(lowChange&&highChange){
    if(lowTime>=highTime){
      halfCycleTime=lowTime-highTime;
    }else{
      halfCycleTime=highTime-lowTime;
    }
    lowChange=false;
    highChange=false;
    delayInterval=halfCycleTime/42;
  }
}



void letter_to_LED(int *character){
  int pos=0;
  int col=0;
  int i=2;
    do{
    //for(col=0;col<6;col++){
      delayTime();
      currentTime = millis();
      if(currentTime-previousTime1>=delayInterval){
        previousTime1=currentTime;
        while(i < 10){
          digitalWrite(i,character[pos] );
          i=i+1;
          pos++;
        }
        i=2;
        col++;
      }
      //delay(1);
      
    }while(col<6);
      
}

void letter_to_LED_B(int *character){
  int pos=39;
  int col=0;
  int i=9;
    do{
    //for(col=0;col<6;col++){
      delayTime();
      currentTime = millis();
      if(currentTime-previousTime1>=delayInterval){
        previousTime1=currentTime;
        while(i > 1){
          if(pos < 0){
              digitalWrite(i,0);    
          }
          else{
              digitalWrite(i,character[pos]);
          }
          i=i-1;
          pos--;
        }
        i=9;
        col++;
      }
      //delay(1);
      
    }while(col<6);
      
}

void loop() {
  int i=0;
  do{
  //for(i=0;i<7;i++){
     adata = analogRead(A1);
     currentTime=millis();
     if(currentTime-previousTime2>=delayInterval*4){
        previousTime2=currentTime;
        if(adata<30){
          direct = !direct;
        }
        
        if(direct){
           letter_to_LED(str[i]); 
        }
        else {
            letter_to_LED_B(str[i]);
        }
        i++;
     }
          //delay(4);
     delayTime();     
  }while(i<7);
}
